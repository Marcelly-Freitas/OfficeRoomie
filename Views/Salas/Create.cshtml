@model OfficeRoomie.Models.Sala

@{
    ViewData["Title"] = "Nova Sala";
}

<h1>Nova Sala</h1>

<h4>Sala</h4>

<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" class="w-100 flex-column d-flex gap-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row gx-4 gy-4">
                <div class="form-group col-12">
                    <label asp-for="nome" class="control-label"></label>
                    <input asp-for="nome" class="form-control" />
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>

                <div class="form-group col-6">
                    <label asp-for="descricao" class="control-label"></label>
                    <input asp-for="descricao" class="form-control" />
                    <span asp-validation-for="descricao" class="text-danger"></span>
                </div>

                <div class="form-group col-6">
                    <label asp-for="capacidade" class="control-label"></label>
                    <input asp-for="capacidade" class="form-control" />
                    <span asp-validation-for="capacidade" class="text-danger"></span>
                </div>

                <div class="form-group col-6">
                    <label asp-for="categoria" class="control-label"></label>
                    <input asp-for="categoria" class="form-control" />
                    <span asp-validation-for="categoria" class="text-danger"></span>
                </div>

                <div class="form-group col-12">
                    <a class="btn btn-link" asp-action="Index">Voltar para lista</a>
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                </div>
</form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
