<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OfficeRoomie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OfficeRoomie.styles.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/iconify/2.0.0/iconify.min.js"></script>
    <style>
        /* Fixar o sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            width: 250px;
            background-color: #343a40;
            color: white;
            padding-top: 1rem;
        }

        /* Ajustar o conteúdo principal para não sobrepor a sidebar */
        .main-content {
            margin-left: 250px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
    </style>
</head>
<body class="mb-0">
    <!-- Sidebar -->
    <nav class="sidebar">
        <h3 class="mb-4 px-3 text-uppercase">OfficeRoomie</h3>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Reservas" asp-action="Index">Reservas</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Administradores" asp-action="Index">Administradores</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Salas" asp-action="Index">Salas</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Cartoes" asp-action="Index">Pagamento</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-white" asp-area="" asp-controller="Cancelamentos" asp-action="Index">Cancelamento</a>
            </li>
        </ul>
    </nav>

    <!-- Content Area -->
    <div class="main-content">
        <header>
            <nav class="navbar navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <span class="navbar-brand">Dashboard</span>
                    <a class="btn btn-link" href="/authentication/logout" title="Logout">
                        <span>Sair</span>
                        <span class="iconify" data-icon="ic:baseline-login" data-inline="false"></span>
                    </a>
                </div>
            </nav>
        </header>

        <main role="main" class="container-fluid p-4 flex-grow-1">
            <div class="h-100">
                <div>
                    @RenderBody()
                </div>
            </div>
        </main>

        <footer class="border-top footer text-muted p-3 text-center bg-light">
            <div class="container">
                &copy; 2024 - OfficeRoomie
            </div>
        </footer>
    </div>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
