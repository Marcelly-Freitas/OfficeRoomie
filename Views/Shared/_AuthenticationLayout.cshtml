<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OfficeRoomie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OfficeRoomie.styles.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/iconify/2.0.0/iconify.min.js"></script>

    <style>
        .authentication-container {
            width: 100%;
            min-height: calc(100vh - 114px);
        }

        .authentication-header {
            width: 100%;
            height: 57px;
        }
        .authentication-footer {
            width: 100%;
            height: 57px;
            display: flex;
            align-items: center;
        }
    </style>
</head>

<body class="mb-0">
    <div class="main-content">
        <header class="authentication-header border-bottom navbar bg-light">
            <div class="container">
                <a class="btn btn-link" href="/">
                    <span class="iconify" data-icon="ic:baseline-arrow-back" data-inline="false"></span>
                    <span>Página incial</span>
                </a>
            </div>
        </header>

        <main role="main">
            @RenderBody()
        </main>

        <footer class="border authentication-footer text-center bg-light">
            <div class="container">
                &copy; 2024 - OfficeRoomie
            </div>
        </footer>
    </div>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
